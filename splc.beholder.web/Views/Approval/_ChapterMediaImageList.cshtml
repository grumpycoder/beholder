@model IEnumerable<splc.domain.Models.ChapterMediaImageRel>

<h2>Chapter-Image Relationships</h2>
<table class="table table-hover">
    <tr>
        <th>Chapter
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaImageId)
        </th>
        <th>Date Start
        </th>
        <th>Date End
        </th>
        <th>Relationship Type
        </th>
        <th>Primary Status
        </th>
        <th>Approval Status
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Chapter.ChapterName
            </td>
            <td>
                @item.MediaImage.ImageTitle
            </td>
            <td>
                @item.DateStart
            </td>
            <td>
                @item.DateEnd
            </td>
            <td>
                @(item.RelationshipType == null ? "Unknown" : item.RelationshipType.Name)
            </td>
            <td>
                @(item.PrimaryStatusId == null ? "Unknown" : item.PrimaryStatus.Name)
            </td>
            <td>
                @item.ApprovalStatus.Name
            </td>
            <td class="nowrap">
                <a href="@Url.Action("ApproveChapterMediaImage", "Approval", new { id = item.Id })" 
                    class="btn btnApprove" 
                    data-title="Edit Relationship" 
                    data-refresh="true" 
                    data-action="@Url.Action("GetChapterMediaImageApprovals", "Approval")">Approve</a>

                <a href="@Url.Action("RejectChapterMediaImage", "Approval", new { id = item.Id })" 
                    class="btn btnApprove" 
                    data-title="Edit Relationship" 
                    data-refresh="true" 
                    data-action="@Url.Action("GetChapterMediaImageApprovals", "Approval")">Disapprove</a>

            </td>
        </tr>
    }

</table>
