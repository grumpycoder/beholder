@model ContactComment

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Contact Comment</legend>

        @Html.HiddenFor(model => model.Id)
		@Html.Partial("_CreateOrEditContactComment", Model)

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back", "Details", "Contacts", new { id = Model.ContactId }, null)
</div>

