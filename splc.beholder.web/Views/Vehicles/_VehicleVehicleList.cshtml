@model Vehicle
@{
    const string viewItem = "Vehicles";
    var vehicleId = (int)ViewData["VehicleId"];
    var count = Model.VehicleVehicleRels.Count() + Model.VehicleVehicleRels2.Count();
}

<div class="panel panel-primary">
    <div class="panel panel-heading">@viewItem <span class="badge pull-right">@string.Format("{0}", @count)</span></div>
    <div class="panel-body">
        <ul class="list-group">
            @if (@count == 0)
            {
                <li class="list-group-item">
                    No Known Vehicle Relationships
                </li>
            }
            @foreach (var item in @Model.VehicleVehicleRels)
            {
                <li class="list-group-item">

                    @if (@vehicleId == item.Vehicle2Id)
                    {
                        @Html.ActionLink(string.Format("{0}", item.Vehicle), "Details", "Vehicles", new { id = item.VehicleId }, null)<br />
                        @Html.DisplayFor(model => item.Vehicle.VIN)
                    }
                    else
                    {
                        @Html.ActionLink(string.Format("{0}", item.Vehicle2), "Details", "Vehicles", new { id = item.Vehicle2Id }, null)<br />
                        @Html.DisplayFor(model => item.Vehicle2.VIN)
                    }
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditVehicleVehicle", "Vehicles", new { id = item.Id})"
                               class="btnEdit"
                               data-title="Edit Relationship"
                               data-refresh="true"
                               data-target="#vehicleVehicles"
                               data-action="@Url.Action("GetVehicleVehicles", "Vehicles", new { @vehicleId })"><span class="glyphicon glyphicon-pencil"></span></a>

                            <a href="@Url.Action("DeleteVehicleVehicle", "Vehicles", new { id = item.Id})"
                               class="btnDelete"
                               data-title="Delete Relationship"
                               data-refresh="true"
                               data-target="#vehicleVehicles"
                               data-action="@Url.Action("GetVehicleVehicles", "Vehicles", new { @vehicleId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>
            }

            @foreach (var item in @Model.VehicleVehicleRels2)
            {
                <li class="list-group-item">

                    @if (@vehicleId == item.Vehicle2Id)
                    {
                        @Html.ActionLink(string.Format("{0}", item.Vehicle), "Details", "Vehicles", new { id = item.VehicleId }, null)<br />
                        @Html.DisplayFor(model => item.Vehicle.VIN)
                    }
                    else
                    {
                        @Html.ActionLink(string.Format("{0}", item.Vehicle2), "Details", "Vehicles", new { id = item.Vehicle2Id }, null)<br />
                        @Html.DisplayFor(model => item.Vehicle2.VIN)
                    }
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditVehicleVehicle", "Vehicles", new { id = item.Id})" 
                               class="btnEdit"
                               data-title="Edit Relationship"
                               data-refresh="true"
                               data-target="#vehicleVehicles"
                               data-action="@Url.Action("GetVehicleVehicles", "Vehicles", new { @vehicleId })"><span class="glyphicon glyphicon-pencil"></span></a>

                            <a href="@Url.Action("DeleteVehicleVehicle", "Vehicles", new { id = item.Id})" 
                               class="btnDelete"
                               data-title="Delete Relationship"
                               data-refresh="true"
                               data-target="#vehicleVehicles"
                               data-action="@Url.Action("GetVehicleVehicles", "Vehicles", new { @vehicleId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>

            }
        </ul>
    </div>
    <div class="panel-footer">
        <a href="@Url.Action("CreateVehicleVehicle", "Vehicles", new { @vehicleId })"
           class="btnNew"
           data-title="New Relationship"
           data-refresh="true"
           data-target="#vehicleVehicles"
           data-action="@Url.Action("GetVehicleVehicles", "Vehicles", new { @vehicleId })"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
</div>

