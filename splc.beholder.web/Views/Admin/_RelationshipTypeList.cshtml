@model IEnumerable<RelationshipType>
<h3>Relationship Types</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Object From</th>
            <th>Object To</th>
            <th>Sort Order</th>
        </tr>
    </thead>
    @foreach (var item in @Model)
    {
        <tr>
            <td class="nowrap">
                <a href="@Url.Action("EditRelationshipType", "Admin", new { id = item.Id })" 
                    class="btnEdit" 
                    data-title="Edit Relationship Type" 
                    data-refresh="true" 
                    data-action="@Url.Action("RelationshipType", "Admin", null)"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteRelationshipType", "Admin", new { id = item.Id })" 
                    class="btnDelete" 
                    data-title="Delete Relationship Type" 
                    data-refresh="true" 
                    data-action="@Url.Action("RelationshipType", "Admin", null)"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
            <td>@item.Name</td>
            <td>@item.ObjectFrom</td>
            <td>@item.ObjectTo</td>
            <td>@item.SortOrder</td>
        </tr>

    }
    <tr>
        <td colspan="3">
            <a href="@Url.Action("CreateRelationshipType", "Admin", null)" 
                class="btnNew" 
                data-refresh="true" 
                data-title="New Relationship Type" 
                data-action="@Url.Action("RelationshipType", "Admin", null)"><span class="glyphicon glyphicon-plus"></span></a>
        </td>
    </tr>
</table>

