@model VehicleModel

@* This partial view defines form fields that will appear when creating and editing entities *@
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    @Html.HiddenFor(model => model.Id)
    @*@Html.HiddenFor(model => model.CreatedUserId)*@
    @*@Html.HiddenFor(model => model.ModifiedUserId)*@
    <fieldset>
        <div class="form-group">
            @Html.BootstrapLabelFor(m => m.VehicleMake)
            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.VehicleMakeId,
                    ((IEnumerable<VehicleMake>)ViewBag.VehicleMakes).Select(option => new SelectListItem
                    {
                        Text = (option == null ? "None" : option.Name),
                        Value = option.Id.ToString(),
                        Selected = (Model != null) && (option.Id == Model.VehicleMakeId)
                    }), "Choose...", new { @class = "form-control" })
                <span class="help-block">@Html.ValidationMessageFor(model => model.VehicleMakeId)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(m => m.Name)
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.SortOrder)
            <div class="col-sm-8">
                @Html.EditorFor(model => model.SortOrder)
                @Html.ValidationMessageFor(model => model.SortOrder)
            </div>
        </div>
    </fieldset>
}
<script type="text/javascript">
    $(function () {
        initControls();
    });
</script>
