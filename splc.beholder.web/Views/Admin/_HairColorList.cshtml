@model IEnumerable<splc.domain.Models.HairColor>
<h3>Hair Colors</h3>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Sort Order</th>
        </tr>
    </thead>
    @foreach (var item in @Model)
    {
        <tr>
            <td class="nowrap">
                <a href="@Url.Action("EditHairColor", "Admin", new { id = item.Id })" 
                    class="btnEdit" 
                    data-title="Edit Hair Color" 
                    data-refresh="true" 
                    data-action="@Url.Action("HairColor", "Admin", null)"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteHairColor", "Admin", new { id = item.Id })" 
                    class="btnDelete" 
                    data-title="Delete Hair Color" 
                    data-refresh="true" 
                    data-action="@Url.Action("HairColor", "Admin", null)"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
            <td>@item.Name</td>
            <td>@item.SortOrder</td>
        </tr>

    }
    <tr>
        <td colspan="3">
            <a href="@Url.Action("CreateHairColor", "Admin", null)" 
                class="btnNew" 
                data-refresh="true" 
                data-title="New Hair Color" 
                data-action="@Url.Action("HairColor", "Admin", null)"><span class="glyphicon glyphicon-plus"></span></a>
        </td>
    </tr>
</table>

