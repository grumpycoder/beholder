@model State

@* This partial view defines form fields that will appear when creating and editing entities *@
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedUserId)
    @Html.HiddenFor(model => model.ModifiedUserId)
    <fieldset>
        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.StateName)
            <div class="col-sm-8">
                @Html.EditorFor(model => model.StateName)
                <span class="help-block">@Html.ValidationMessageFor(model => model.StateName)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.BootstrapLabelFor(model => model.StateCode)
            <div class="col-sm-8">
                @Html.EditorFor(model => model.StateCode)
                <span class="help-block">@Html.ValidationMessageFor(model => model.StateCode)</span>
            </div>
        </div>
    </fieldset>
    
}
<script type="text/javascript">
    $(function () {
        initControls();
    });
</script>
