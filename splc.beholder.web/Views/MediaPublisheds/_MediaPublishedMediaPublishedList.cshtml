@model MediaPublished
@{
    const string viewItem = "Published Items";
    var mediaPublishedId = (int)ViewData["MediaPublishedId"];
    var count = Model.MediaPublishedMediaPublishedRels.Count() + Model.MediaPublishedMediaPublishedRels2.Count();
}

<div class="panel panel-primary">
    <div class="panel panel-heading">@viewItem <span class="badge pull-right">@string.Format("{0}", @count)</span></div>
    <div class="panel-body">
        <ul class="list-group">
            @if (@count == 0)
            {
                <li class="list-group-item">
                    No Known Published Relationships
                </li>
            }
            @foreach (var item in @Model.MediaPublishedMediaPublishedRels)
            {
                <li class="list-group-item">
                        @Html.ActionLink(item.MediaPublished2.Name, "Details", "MediaPublisheds", new { id = item.MediaPublished2.Id }, null)<br />
                        @Html.DisplayFor(model => item.MediaPublished2.MovementClass.Name)
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditMediaPublishedMediaPublished", "MediaPublisheds", new { id = item.Id})"
                               class="btnEdit"
                               data-title="Edit Relationship"
                               data-refresh="true"
                               data-target="#mediaPublishedMediaPublisheds"
                               data-action="@Url.Action("GetMediaPublishedMediaPublisheds", "MediaPublisheds", new { @mediaPublishedId })"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="@Url.Action("DeleteMediaPublishedMediaPublished", "MediaPublisheds", new { id = item.Id })"
                               class="btnDelete"
                               data-title="Delete Relationship"
                               data-refresh="true"
                               data-target="#mediaPublishedMediaPublisheds"
                               data-action="@Url.Action("GetMediaPublishedMediaPublisheds", "MediaPublisheds", new { @mediaPublishedId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>
            }

            @foreach (var item in @Model.MediaPublishedMediaPublishedRels2)
            {
                <li class="list-group-item">
                    @if (@mediaPublishedId == item.MediaPublished2Id)
                    {
                        @Html.ActionLink(item.MediaPublished.Name, "Details", "MediaPublisheds", new { id = item.MediaPublished.Id }, null)<br />
                        @Html.DisplayFor(model => item.MediaPublished.MovementClass.Name)
                    }
                    else
                    {
                        @Html.ActionLink(item.MediaPublished2.Name, "Details", "MediaPublisheds", new { id = item.MediaPublished2.Id }, null)<br />
                        @Html.DisplayFor(model => item.MediaPublished2.MovementClass.Name)
                    }
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditMediaPublishedMediaPublished", "MediaPublisheds", new { id = item.Id})"
                               class="btnEdit"
                               data-title="Edit Relationship"
                               data-refresh="true"
                               data-target="#mediaPublishedMediaPublisheds"
                               data-action="@Url.Action("GetMediaPublishedMediaPublisheds", "MediaPublisheds", new { @mediaPublishedId })"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="@Url.Action("DeleteMediaPublishedMediaPublished", "MediaPublisheds", new { id = item.Id})"
                               class="btnDelete"
                               data-title="Delete Relationship"
                               data-refresh="true"
                               data-target="#mediaPublishedMediaPublisheds"
                               data-action="@Url.Action("GetMediaPublishedMediaPublisheds", "MediaPublisheds", new { @mediaPublishedId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>

            }
        </ul>
    </div>
    <div class="panel-footer">
        <a href="@Url.Action("CreateMediaPublishedMediaPublished", "MediaPublisheds", new { @mediaPublishedId })"
           class="btnNew"
           data-title="New Relationship"
           data-refresh="true"
           data-target="#mediaPublishedMediaPublisheds"
           data-action="@Url.Action("GetMediaPublishedMediaPublisheds", "MediaPublisheds", new { @mediaPublishedId })"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
</div>
