@model IEnumerable<splc.domain.Models.GroupUser>


<p>
    @*@Html.DropDownList("GroupId", (SelectList)ViewBag.Groups, "Choose Group")*@
    @Html.ActionLink("Add Group", "AddGroup", null, new { @class = "btn" })
</p>

@if (!Model.Any())
{
    <p>User assigned no groups</p>
}
<table class="table table-condensed table-striped" >
    <tr>
        <th>
            Group
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    <a href="@Url.Action("DeleteGroupUser", "Security", new { id = item.Id })"
                       class="btnDelete"
                       data-title="Delete Group"
                       data-message="Are you sure you want to delete?"
                       data-refresh="true"
                       data-action="@Url.Action("UserDetail", "Security", new { id = item.Id })">
                        <span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
    }

</table>

