@model MediaWebsiteEGroup
@{
    const string viewItem = "Website EGroups";
    var mediaWebsiteEGroupId = (int) ViewData["MediaWebsiteEGroupId"]; 
    var count = Model.MediaWebsiteEGroupMediaWebsiteEGroupRels.Count() + Model.MediaWebsiteEGroupMediaWebsiteEGroupRels2.Count(); 
}

<div class="panel panel-primary">
    <div class="panel panel-heading">@viewItem <span class="badge pull-right">@string.Format("{0}", @count)</span></div>
    <div class="panel-body">
        <ul class="list-group">
            @if (@count == 0)
            {
                <li class="list-group-item">
                    No Known Website EGroup Relationships
                </li>
            }
            @foreach (var item in @Model.MediaWebsiteEGroupMediaWebsiteEGroupRels)
            {
                <li class="list-group-item">
                @if (@mediaWebsiteEGroupId == item.MediaWebsiteEGroup2Id)
                {
                    @Html.ActionLink(item.MediaWebsiteEGroup.Name, "Details", "MediaWebsiteEGroups", new { id = item.MediaWebsiteEGroup.Id }, null)<br/>
                    @Html.DisplayFor(model => item.MediaWebsiteEGroup.MovementClass.Name)
                }
                else
                {
                    @Html.ActionLink(item.MediaWebsiteEGroup2.Name, "Details", "MediaWebsiteEGroups", new { id = item.MediaWebsiteEGroup2.Id }, null)<br/>
                    @Html.DisplayFor(model => item.MediaWebsiteEGroup2.MovementClass.Name)
                }
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditMediaWebsiteEGroupMediaWebsiteEGroup", "MediaWebsiteEGroups", new { id = item.Id})" 
                               class="btnEdit" 
                               data-title="Edit Relationship" 
                               data-refresh="true" 
                               data-target="#mediaWebsiteEGroupMediaWebsiteEGroups"
                               data-action="@Url.Action("GetMediaWebsiteEGroupMediaWebsiteEGroups", "MediaWebsiteEGroups", new { mediaWebsiteEGroupId = @mediaWebsiteEGroupId })"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="@Url.Action("DeleteMediaWebsiteEGroupMediaWebsiteEGroup", "MediaWebsiteEGroups", new { id = item.Id})"
                               class="btnDelete" 
                               data-title="Delete Relationship" 
                               data-refresh="true" 
                               data-target="#mediaWebsiteEGroupMediaWebsiteEGroups"
                               data-action="@Url.Action("GetMediaWebsiteEGroupMediaWebsiteEGroups", "MediaWebsiteEGroups", new { mediaWebsiteEGroupId = @mediaWebsiteEGroupId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>
            }

            @foreach (var item in @Model.MediaWebsiteEGroupMediaWebsiteEGroupRels2)
            {
                <li class="list-group-item">
                @if (@mediaWebsiteEGroupId == item.MediaWebsiteEGroup2Id)
                {
                    @Html.ActionLink(item.MediaWebsiteEGroup.Name, "Details", "MediaWebsiteEGroups", new { id = item.MediaWebsiteEGroup.Id }, null)<br/>
                    @Html.DisplayFor(model => item.MediaWebsiteEGroup.MovementClass.Name)
                }
                else
                {
                    @Html.ActionLink(item.MediaWebsiteEGroup2.Name, "Details", "MediaWebsiteEGroups", new { id = item.MediaWebsiteEGroup2.Id }, null)<br/>
                    @Html.DisplayFor(model => item.MediaWebsiteEGroup2.MovementClass.Name)
                }
                    <div class="clearfix">
                        <span class="pull-right">
                            <a href="@Url.Action("EditMediaWebsiteEGroupMediaWebsiteEGroup", "MediaWebsiteEGroups", new { id = item.Id})" 
                               class="btnEdit" 
                               data-title="Edit Relationship" 
                               data-refresh="true" 
                               data-target="#mediaWebsiteEGroupMediaWebsiteEGroups"
                               data-action="@Url.Action("GetMediaWebsiteEGroupMediaWebsiteEGroups", "MediaWebsiteEGroups", new { mediaWebsiteEGroupId = @mediaWebsiteEGroupId })"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="@Url.Action("DeleteMediaWebsiteEGroupMediaWebsiteEGroup", "MediaWebsiteEGroups", new { id = item.Id})"
                               class="btnDelete" 
                               data-title="Delete Relationship" 
                               data-refresh="true" 
                               data-target="#mediaWebsiteEGroupMediaWebsiteEGroups"
                               data-action="@Url.Action("GetMediaWebsiteEGroupMediaWebsiteEGroups", "MediaWebsiteEGroups", new { mediaWebsiteEGroupId = @mediaWebsiteEGroupId })"><span class="glyphicon glyphicon-trash"></span></a>
                        </span>
                    </div>
                </li>

            }
        </ul>
    </div>
    <div class="panel-footer">
        <a href="@Url.Action("CreateMediaWebsiteEGroupMediaWebsiteEGroup", "MediaWebsiteEGroups", new { mediaWebsiteEGroupId = @mediaWebsiteEGroupId })" 
           class="btnNew" 
           data-title="New Relationship" 
           data-refresh="true" 
           data-target="#mediaWebsiteEGroupMediaWebsiteEGroups"
           data-action="@Url.Action("GetMediaWebsiteEGroupMediaWebsiteEGroups", "MediaWebsiteEGroups", new {  mediaWebsiteEGroupId = @mediaWebsiteEGroupId })"><span class="glyphicon glyphicon-plus"></span></a>
    </div>
</div>

